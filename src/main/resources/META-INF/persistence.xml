<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<!-- persistence.xml -->

	<persistence-unit name="mainPersistance">
		<!-- The provider only needs to be set if you use several JPA providers -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
	
		<class>it.av.youeat.ocm.model.Activity</class>
		<class>it.av.youeat.ocm.model.ActivityRistorante</class>
		<class>it.av.youeat.ocm.model.ActivityUserRelation</class>
		<class>it.av.youeat.ocm.model.BasicEntity</class>
		<class>it.av.youeat.ocm.model.Comment</class>
		<class>it.av.youeat.ocm.model.Dialog</class>
		<class>it.av.youeat.ocm.model.DataRistorante</class>
		<class>it.av.youeat.ocm.model.Eater</class>
		<class>it.av.youeat.ocm.model.EaterProfile</class>
		<class>it.av.youeat.ocm.model.EaterRelation</class>
		<class>it.av.youeat.ocm.model.Language</class>
		<class>it.av.youeat.ocm.model.ProvIta</class>
		<class>it.av.youeat.ocm.model.RateOnRistorante</class>
		<class>it.av.youeat.ocm.model.Ristorante</class>
		<class>it.av.youeat.ocm.model.RistoranteDescriptionI18n</class>
		<class>it.av.youeat.ocm.model.RistorantePicture</class>
		<class>it.av.youeat.ocm.model.RistoranteRevision</class>
		<class>it.av.youeat.ocm.model.RistoranteTypes</class>
		<class>it.av.youeat.ocm.model.Tag</class>
		<class>it.av.youeat.ocm.model.Message</class>
		<class>it.av.youeat.ocm.model.data.City</class>
		<class>it.av.youeat.ocm.model.data.Country</class>
		<class>it.av.youeat.ocm.model.data.CountryRegion</class>
			
		<properties>
			<!-- Scan for annotated classes  -->
			<!--  property name="hibernate.archive.autodetection" value="class" /-->
			
			<property name="hibernate.jdbc.use_streams_for_binary" value="true"/>
			
			<property name="hibernate.search.default.directory_provider" value="org.hibernate.search.store.FSDirectoryProvider"/>
			<property name="hibernate.search.default.indexBase" value="/var/lucene/youeat/luceneIndex"/>

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="use_sql_comments" value="true" />


				<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
				<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
				
				<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
				<property name="hibernate.connection.url"
				value="jdbc:postgresql://localhost/eat" />
				<property name="hibernate.connection.username" value="eat" />
				<property name="hibernate.connection.password" value="eat" />
				<property name="hibernate.hbm2ddl.auto" value="update" />
				
			<!-- Connecting to HSQL  -->
			<!--<property name="hibernate.dialect"
				value="org.hibernate.dialect.HSQLDialect" />

			<property name="hibernate.connection.driver_class"
				value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url"
				value="jdbc:hsqldb:file:persistence-db/test" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period"
				value="3000" />
		--></properties>
	</persistence-unit>

</persistence>